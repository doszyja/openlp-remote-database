{
  "name": "openlp-remote-database",
  "version": "0.1.0",
  "description": "Web-based song management system for churches using OpenLP",
  "private": true,
  "license": "MIT",
  "author": "Dominik Szyja",
  "repository": {
    "type": "git",
    "url": "https://github.com/doszyja/openlp-remote-database.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev:sync": "pnpm --filter sync dev",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "build:sync": "pnpm --filter sync build",
    "build:shared": "pnpm --filter @openlp/shared build",
    "build:all": "pnpm -r --parallel build",
    "test:api": "pnpm --filter api test",
    "test:web": "pnpm --filter web test",
    "test:sync": "pnpm --filter sync test",
    "test:all": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
