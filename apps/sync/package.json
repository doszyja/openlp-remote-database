{
  "name": "sync",
  "version": "0.1.0",
  "description": "CLI tool for syncing OpenLP SQLite database with backend API",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "openlp-sync": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext ts --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "axios": "^1.6.7",
    "commander": "^11.1.0",
    "winston": "^3.11.0",
    "@openlp/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}

