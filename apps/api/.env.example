# Database
DATABASE_URL=mongodb://localhost:27017/openlp_db

# Server
PORT=3000
NODE_ENV=development

# CORS
# You can specify multiple origins separated by commas
# FRONTEND_URL and DISCORD_CALLBACK_URL origins are automatically added
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
# Or use CORS_ORIGINS (plural) for additional origins
# CORS_ORIGINS=https://example.com,https://app.example.com

# Frontend URL (origin will be automatically added to CORS)
FRONTEND_URL=http://localhost:5173

# JWT (Phase 2)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_CALLBACK_URL=http://localhost:3000/api/auth/discord/callback
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_REQUIRED_ROLE_ID=your_discord_role_id

